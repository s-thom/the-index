{
  "name": "backend",
  "version": "2.0.0",
  "private": true,
  "description": "Node backend for the-index",
  "author": "Stuart Thomson <me@sthom.kiwi>",
  "homepage": "https://github.com/s-thom/the-index/tree/master/packages/backend#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s-thom/the-index.git"
  },
  "scripts": {
    "start": "ts-node-dev --respawn src/index.ts | pino-pretty -clt",
    "build": "tsc",
    "test": "dotenv -- jest --watchAll=false --coverage",
    "test:watch": "dotenv -- jest --watchAll --coverage",
    "lint": "npm run lint:tsc && npm run lint:eslint",
    "lint:tsc": "tsc --noEmit",
    "lint:eslint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --fix",
    "generate-types": "restful-react import --skip-react --file ../openapi/build/the-index.yaml --output src/api-types.ts",
    "migrate": "dotenv -- flyway -locations=filesystem:./sql migrate"
  },
  "bugs": {
    "url": "https://github.com/s-thom/the-index/issues"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-expand": "^5.1.0",
    "express": "^4.17.1",
    "express-correlation-id": "^1.3.1",
    "express-pino-logger": "^5.0.0",
    "express-request-id": "^1.4.1",
    "extended-snowflake": "^2.1.0",
    "helmet": "^4.2.0",
    "jsonwebtoken": "^8.5.1",
    "otplib": "^12.0.1",
    "pino": "^6.8.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.0.0",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.29",
    "typescript": "^4.1.3",
    "url-regex-safe": "^1.0.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-session": "^2.0.42",
    "@types/cors": "^2.8.9",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/express-correlation-id": "^1.2.2",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-request-id": "^1.4.1",
    "@types/helmet": "^4.0.0",
    "@types/jest": "^26.0.19",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.14",
    "@types/pino": "^6.3.4",
    "@types/sqlite3": "^3.1.6",
    "@types/url-regex-safe": "^1.0.0",
    "dotenv-cli": "^4.0.0",
    "flywaydb-cli": "^0.8.3",
    "jest": "^26.6.3",
    "pino-pretty": "^4.3.0",
    "restful-react": "^15.1.3",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.1.1"
  }
}
